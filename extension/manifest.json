{
  "manifest_version": 2,
  "name": "ExtensionSample",
  "description": "sample",
  "version": "1.0",
  "icons": {
    "16": "image/icon.png",
    "48": "image/icon.png",
    "128": "image/icon.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "image/icon.png",
      "38": "image/icon.png"
    },
    "default_title": "Sample",
    "default_popup": "view/popup.html"
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "https://*/*",
    "http://*/*"
  ]
}